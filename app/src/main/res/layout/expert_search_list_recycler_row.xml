<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="30dp"
        android:elevation="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="15dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/expertSearchListImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/engineer">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/searchListExpertUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Dr.Ali Altınel"
            style="@style/TextViewTitleStyle"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="140dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/message_row_bg"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginStart="140dp">

        </TextView>

        <TextView
            android:id="@+id/searchListExpertAboutTextView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="60dp"
            android:text="Can make voice call with doctor. Can make voice call with doctor. Can make voice call with doctor"
            android:textColor="@color/blue"
            android:textSize="11sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="TRY"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_marginStart="140dp">

        </TextView>

        <TextView
            android:id="@+id/searchListExpertPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="180"
            android:textColor="#485D9C"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_marginStart="180dp">

        </TextView>

        <TextView
            android:id="@+id/searchListExpertAppointmentButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="Seç"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:layout_gravity="end"
            android:drawableEnd="@drawable/next_icon"
            android:background="@drawable/input_bg"
            android:elevation="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="20dp">

        </TextView>

    </androidx.cardview.widget.CardView>
    

</LinearLayout>